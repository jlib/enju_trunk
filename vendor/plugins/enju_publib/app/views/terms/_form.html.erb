<%= form_for(@term) do |f| %>
  <%= f.error_messages %>

  <div class="field">
    <%= f.label :display_name %><br />
    <%= f.text_field :display_name %>
  </div>

  <div class="field">
    <%= f.label :start_at %><br />
    <%= f.date_select :start_at, :use_month_numbers => true -%>
  </div>

  <div class="field">
    <%= f.label :end_at %><br />
    <%= f.date_select :end_at, :use_month_numbers => true -%>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
